<% if flash.any? %>
  <% user_facing_flashes.each do |key, value| %>

    <div class="alert alert-dismissable alert-<%= flash_class(key)%>">
      <button class="close" data-dismiss="alert">X</button>
      <%= value %>
    </div>
  <% end %>
<% end %>
<!-- flash.each do |key,value| 不自定义其他功能的话可以这么写 -->
