<div class="col-md-12">
<div>
  <% if current_user && current_user.admin?%>
    <%= link_to("Add a job", new_job_path,class:"btn btn-default pull-right")%>
  <% end %>
</div>
<div class="dropdown pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
    排序
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound") )%></li>
    <li><%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound") )%></li>
    <li><%= link_to("按照发布时间排序", jobs_path )%></li>
  </ul>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Job</th>
      <th>description</th>
      <th>薪资下限</th>
      <th>薪资上限</th>
      <th>刊登时间</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to(job.title,job_path(job))%></td>
        <td><%= job.description %></td>
        <td><%= job.wage_lower_bound %></td>
        <td><%= job.wage_upper_bound %></td>
        <td><%= job.created_at %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
